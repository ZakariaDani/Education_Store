<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="authentication_title">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">40dp</item>
        <item name="fontFamily">@font/montserrat</item>
    </style>

    <style name="input_label">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15dp</item>
        <item name="fontFamily">@font/montserrat</item>
    </style>

    <style name="input">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18dp</item>
        <item name="fontFamily">@font/montserrat</item>
        <item name="backgroundTint">@color/main_color</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:paddingStart">5dp</item>
        <item name="android:textColorHint">@color/gray</item>
    </style>

    <style name="background_container">
        <item name="android:background">@color/main_color</item>
        <item name="fontFamily">@font/montserrat</item>
    </style>

    <style name="submit_button">
        <item name="android:backgroundTint">@color/main_color</item>
        <item name="android:background">@color/main_color</item>
        <item name="fontFamily">@font/montserrat</item>
        <item name="textFillColor">@color/white</item>
    </style>

    <style name="vous_avez_pas_de_compte">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18dp</item>
        <item name="fontFamily">@font/montserrat</item>
    </style>

    <style name="creer_un">
        <item name="android:textColor">@color/main_color</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/montserrat</item>
    </style>

    <style name="branch">
        <item name="android:textSize">15dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:buttonTint">@color/main_color</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="loadingIcon">
        <item name="android:indeterminateTint">@color/loading_color</item>
        <item name="android:rotation">6</item>
        <item name="android:visibility">invisible</item>
    </style>
</resources>