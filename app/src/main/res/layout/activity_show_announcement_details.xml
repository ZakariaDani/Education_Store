<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:cardView="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/carView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="40dp"
    android:background="#FFFFFF"
    android:backgroundTint="#FFFFFF"
    cardView:cardCornerRadius="8dp"
    cardView:cardElevation="8dp">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="#CD1D1D"
        android:backgroundTint="#FFFFFF">

        <ImageView
            android:id="@+id/ann_image"
            android:layout_width="match_parent"
            android:layout_height="231dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:contentDescription="@string/app_name"
            android:scaleType="fitXY"
            android:src="@drawable/no_image" />


        <TextView
            android:id="@+id/ann_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ann_image"
            android:layout_marginStart="10dp"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/montserrat"
            android:textColor="@color/black"
            android:textSize="18pt"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/ann_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ann_desc"
            android:layout_marginStart="10dp"
            android:layout_marginTop="30dp"
            android:drawablePadding="2dp"
            android:fontFamily="@font/montserrat"
            android:textColor="@color/main_color"
            android:textSize="15pt"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/ann_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ann_title"
            android:lines="8"
            android:maxLines="10"
            android:minLines="6"
            android:layout_marginStart="10dp"
            android:layout_marginTop="26dp"
            android:drawablePadding="2dp"
            android:fontFamily="@font/montserrat"
            android:textColor="@color/main_color"
            android:textSize="8pt"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/ann_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ann_price"
            android:layout_marginStart="10dp"
            android:layout_marginTop="41dp"
            android:drawablePadding="2dp"
            android:fontFamily="@font/montserrat"
            android:textColor="@color/main_color"
            android:textSize="10pt"
            android:textStyle="bold" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>